<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzkans.crm.modules.login.dao.ChangePasswordADO">



    <select id="selectChangePassword" parameterType="int" resultType="com.hzkans.crm.modules.login.entity.ChangePasswordDO">
         select   id,user_id as  userId, register_date as registerDate,validata_code as validataCode
         from t_user_change_password where id = #{id}
    </select>
	<insert id="inster" useGeneratedKeys="true" keyProperty="id" parameterType="com.hzkans.crm.modules.login.entity.ChangePasswordDO">
        insert into t_user_change_password (user_id,register_date, validata_code) values
          (#{userId},#{registerDate},#{validataCode})
    </insert>

    <update id="update" parameterType="com.hzkans.crm.modules.login.entity.ChangePasswordDO">
        UPDATE t_user_change_password SET
			register_date = #{registerDate},
			validata_code = #{validataCode}
			where user_id = #{userId}
    </update>

</mapper>